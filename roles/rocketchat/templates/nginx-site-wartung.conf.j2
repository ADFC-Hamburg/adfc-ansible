server {

    listen 80;
    listen [::]:80;

    server_name {{ rocketchat_server_name }} {{ inventory_hostname }};

    root /var/www/empty;

    location /.well-known/acme-challenge/ {
        proxy_pass http://127.0.1.1:180/;

    }

    location / {
        return 301 https://{{ rocketchat_server_name }};
    }

}

server {
    listen [::]:443 ssl http2;
    listen 443 ssl http2;

    server_name {{ rocketchat_server_name }} {{ inventory_hostname }};

    ssl_certificate_key /var/lib/dehydrated/certs/chat2.hamburg.adfc.de/privkey.pem;
    ssl_certificate /var/lib/dehydrated/certs/chat2.hamburg.adfc.de/fullchain.pem;

    {{ rocketchat_ssl_params | indent(4) }}

    error_page 403 404 =503 /wartung.html;
    error_page 500 501 502 503 504 =503 /wartung.html;

    location = /wartung.html {
        root /var/www/chat-wartung;
        index wartung.html
        internal;
    }

    location /{
        autoindex off;
        root /var/www/empty;
        index index.html;
        try_files $uri $uri/ /index.html =500;
    }
}