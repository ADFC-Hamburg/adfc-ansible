server {

    listen 80;
    listen [::]:80;

    server_name {{ rocketchat_server_name }} {{ inventory_hostname }};

    root /var/www/empty;

    location /.well-known {}

    location / {
        return 301 https://{{ rocketchat_server_name }};
    }

}

server {
    listen [::]:443 ssl http2;
    listen 443 ssl http2;

    server_name {{ rocketchat_server_name }} {{ inventory_hostname }};

    ssl_certificate_key /etc/letsencrypt/tmp/chat.hamburg.adfc.de.key;
    ssl_certificate /etc/letsencrypt/tmp/fullchain.cer;

    ssl_session_timeout 1d;
    ssl_session_cache shared:MozSSL:10m;  # about 40000 sessions
    ssl_session_tickets off;

    # modern configuration
    ssl_protocols TLSv1.3;
    ssl_prefer_server_ciphers off;

    # HSTS (ngx_http_headers_module is required) (63072000 seconds)
    add_header Strict-Transport-Security "max-age=63072000" always;


    error_page 403 404 =503 /wartung.html;
    error_page 500 501 502 503 504 =503 /wartung.html;

    location = /wartung.html {
        root /var/www/chat-wartung;
        index wartung.html
        internal;
    }

    location /{
        autoindex off;
        root /var/www/empty;
        index index.html;
        try_files $uri $uri/ /index.html =500;
    }
}