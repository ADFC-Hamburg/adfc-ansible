server {

    listen 80;
    listen [::]:80;

    server_name {{ rocketchat_server_name }} {{ inventory_hostname}};

    root /var/www/empty;

    location /.well-known/acme-challenge/ {
        proxy_pass http://127.0.1.1:180/;
    }

    location / {
        return 301 https://{{ rocketchat_server_name }};
    }

}

server {
    listen [::]:443 ssl http2;
    listen 443 ssl http2;

    server_name {{ rocketchat_server_name }} {{ inventory_hostname }};

    ssl_certificate_key /var/lib/dehydrated/certs/chat2.hamburg.adfc.de/privkey.pem;
    ssl_certificate /var/lib/dehydrated/certs/chat2.hamburg.adfc.de/fullchain.pem;

    ssl_session_timeout 1d;
    ssl_session_cache shared:MozSSL:10m;  # about 40000 sessions
    ssl_session_tickets off;

    # modern configuration
    ssl_protocols TLSv1.3;
    ssl_prefer_server_ciphers off;

    # HSTS (ngx_http_headers_module is required) (63072000 seconds)
    add_header Strict-Transport-Security "max-age=63072000" always;

    location / {
        proxy_pass http://127.0.0.1:3000;

        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $http_host;

        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forward-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forward-Proto https;
        proxy_set_header X-Nginx-Proxy true;

        proxy_redirect off;

    }




}